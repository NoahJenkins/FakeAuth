@using System.Security.Principal

<ul class="navbar-nav">
	@if (User.Identity.IsAuthenticated)
	{
		<li class="nav-item">
			<span class="navbar-text text-dark">Hello @User.Identity.Name!</span>
		</li>
	}
	else
	{
		<li class="nav-item">
			<span class="navbar-text text-dark">Not Logged In</span>
		</li>
	}
</ul>
